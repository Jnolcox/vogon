<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?scenebuilder-preview-i18n-resource messages.properties?>
<?scenebuilder-stylesheet Style.css?>

<VBox fx:id="transactionsVBox" prefHeight="608.0" prefWidth="810.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.zlogic.vogon.ui.TransactionsController">
  <children>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0">
      <children>
        <Button mnemonicParsing="false" onAction="#handleCreateTransaction" text="%NEW_TRANSACTION">
          <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" fx:id="x1" />
          </HBox.margin>
        </Button>
        <Button fx:id="duplicateTransaction" mnemonicParsing="false" onAction="#handleDuplicateTransaction" text="%DUPLICATE_TRANSACTION" />
        <Button fx:id="deleteTransaction" mnemonicParsing="false" onAction="#handleDeleteTransaction" text="%DELETE_TRANSACTION" HBox.margin="$x1" />
      </children>
    </HBox>
    <TableView fx:id="transactionsTable" editable="true">
      <columns>
        <TableColumn prefWidth="75.0" sortable="false" style="" text="%TRANSACTION_DESCRIPTION" fx:id="columnDescription">
          <cellValueFactory>
            <PropertyValueFactory property="description" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn prefWidth="75.0" sortable="false" text="%TRANSACTION_DATE" fx:id="columnDate">
          <cellValueFactory>
            <PropertyValueFactory property="date" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn prefWidth="75.0" sortable="false" text="%TRANSACTION_TAGS" fx:id="columnTags">
          <cellValueFactory>
            <PropertyValueFactory property="tags" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn prefWidth="75.0" sortable="false" text="%TRANSACTION_AMOUNT" fx:id="columnAmount">
          <cellValueFactory>
            <PropertyValueFactory property="amount" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn prefWidth="75.0" sortable="false" text="%TRANSACTION_ACCOUNT" fx:id="columnAccount">
          <cellValueFactory>
            <PropertyValueFactory property="accountName" />
          </cellValueFactory>
        </TableColumn>
      </columns>
    </TableView>
    <Pagination fx:id="transactionsTablePagination" pageCount="10" prefWidth="563.0" VBox.vgrow="ALWAYS" />
  </children>
  <stylesheets>
    <URL value="@Style.css" />
  </stylesheets>
</VBox>
